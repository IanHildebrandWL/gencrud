from applic.extensions import mm
from ${application}.${name}.model import ${cls}

class ${cls}Schema( mm.ModelSchema ):
    """Schema for the ${name} table, this is generated by the gencrud.py module
    When modifing the file make sure that you remove the table from the configuration.
    """
    class Meta:
        model = ${cls}

${name}Schema   = ${cls}Schema()
${name}sSchema  = ${cls}Schema( many = True )